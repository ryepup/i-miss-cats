{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "strictNullChecks": true,
        "jsx": "react",
        "lib": [
            "dom", "es5", "scripthost",
            "es2015.promise", "es2015.iterable", "es2015.symbol"
        ]
    },
    "include": [
        "lib/**/*"
    ],
    "exclude": [
        "node_modules/**/*"
    ]
}